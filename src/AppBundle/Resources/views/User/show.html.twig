{% extends '@App/template.html.twig' %}
{% block title %} User {% endblock %}
{% block page_title %} User Management {% endblock %}
{% block content %}
<div class="panel panel-default">
	<div class="panel-heading">
		<div class="col-md-6">
			<a href="{{ path('user.index') }}" class="btn btn-default">
				Back to list
			</a>
		</div>
		<div class="col-md-6"></div>
		<div class="clearfix"></div>
	</div>
	<div class="panel-body">
		<form class="form-horizontal">
		   <div class="form-group">
		      <label for="username" class="col-sm-2 control-label">Username</label>
		      <div class="col-sm-10">
		        <label class="control-label">
		         	<strong>:&nbsp{{ data.username }}</strong>
		         </label>
		      </div>
		   </div>
		   <div class="form-group">
		      <label for="email" class="col-sm-2 control-label">Email</label>
		      <div class="col-sm-10">
		        <label class="control-label">
		         	<strong>:&nbsp{{ data.email }}</strong>
		         </label>
		      </div>
		   </div>
		   <div class="form-group">
		      <label for="expired" class="col-sm-2 control-label">Enabled</label>
		      <div class="col-sm-10">
		        <label class="control-label">
		        	{% if data.enabled %}
		         		<strong>:&nbsp Yes</strong>
		         	{% else %}
		         		<strong>:&nbsp No</strong>
		         	{% endif %}
		         </label>
		      </div>
		   </div>
		   <div class="form-group">
		      <label for="brand" class="col-sm-2 control-label">Groups</label>
		      <div class="col-sm-10">
		        <label class="control-label">
		        	{% if data.groups|length > 0 %}
		         		<strong>:&nbsp {% for g in data.groups %} {{ g.name }} ,  {% endfor %} </strong>
		         	{% else %}
		         		<strong>:&nbspNo Group Selected</strong>
		         	{% endif %}
		         </label>
		      </div>
		   </div>
		</form>
	</div>
</div>
{% endblock %}