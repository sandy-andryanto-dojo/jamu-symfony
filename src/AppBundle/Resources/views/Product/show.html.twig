{% extends '@App/template.html.twig' %}
{% block title %} Product {% endblock %}
{% block page_title %} Product Management {% endblock %}
{% block content %}
<div class="panel panel-default">
	<div class="panel-heading">
		<div class="col-md-6">
			<a href="{{ path('product.index') }}" class="btn btn-default">
				Back to list
			</a>
		</div>
		<div class="col-md-6"></div>
		<div class="clearfix"></div>
	</div>
	<div class="panel-body">
		<form class="form-horizontal">
			<div class="form-group">
		      <label for="code" class="col-sm-2 control-label">Poduct Number</label>
		      <div class="col-sm-10">
		        <label class="control-label">
		         	<strong>:&nbsp{{ data.code }}</strong>
		         </label>
		      </div>
		   </div>
		   <div class="form-group">
		      <label for="name" class="col-sm-2 control-label">Name</label>
		      <div class="col-sm-10">
		        <label class="control-label">
		         	<strong>:&nbsp{{ data.name }}</strong>
		         </label>
		      </div>
		   </div>
		   <div class="form-group">
		      <label for="price" class="col-sm-2 control-label">Price</label>
		      <div class="col-sm-10">
		        <label class="control-label">
		         	<strong>:&nbsp{{ data.price }}</strong>
		         </label>
		      </div>
		   </div>
		   <div class="form-group">
		      <label for="expired" class="col-sm-2 control-label">Expired</label>
		      <div class="col-sm-10">
		        <label class="control-label">
		         	<strong>:&nbsp{{ data.expired | date('Y-m-d') }}</strong>
		         </label>
		      </div>
		   </div>
		   <div class="form-group">
		      <label for="brand" class="col-sm-2 control-label">Brand</label>
		      <div class="col-sm-10">
		        <label class="control-label">
		         	<strong>:&nbsp{{ data.brand.name }}</strong>
		         </label>
		      </div>
		   </div>
		   <div class="form-group">
		      <label for="brand" class="col-sm-2 control-label">Categories</label>
		      <div class="col-sm-10">
		        <label class="control-label">
		        	{% if data.categories|length > 0 %}
		         		<strong>:&nbsp {% for cat in data.categories %} {{ cat.name }} ,  {% endfor %} </strong>
		         	{% else %}
		         		<strong>:&nbspNo Image</strong>
		         	{% endif %}
		         </label>
		      </div>
		   </div>
		   {% if data.image %}
		   <div class="form-group">
	            <label class="col-md-2 control-label" for="inputDefault"></label>
	            <div class="col-md-10">
	               <img class="img-responsive img-thumbnail" src="/uploads/{{ data.image }}" />
	            </div>
	        </div>
		   {% endif %}
		</form>
	</div>
</div>
{% endblock %}